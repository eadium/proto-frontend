<div>
	<div class="table">
		<div class="table-body">
			<div class="table-row">
				<div class="table-cell table-head">Gamer</div>
				<div class="table-cell table-head">Score</div>
			</div>

			{{#each this.records}}
			<div class="table-row">
				<div class="table-cell">{{nickname}}</div>
				<div class="table-cell">{{score}}</div>
			</div>
			{{/each}}
		</div>
	</div>

	<div class="paginator" ref="paginator">
		{{#each pages}}
		{{#if isCurrent}}
		<a class="current-page" num="page-{{value}}">{{value}}</a>
		{{else}}
		<a num="page-{{value}}">{{value}}</a>
		{{/if}}
		{{/each}}
	</div>
</div>
