<div>
	{{#if preloader}}
		<img src="/public/service/preloader.svg" width="80" alt="Loading...">
	{{else}}
		{{#if sessionExists}}
			{{#if changeProfile}}
				<form>
					<input type="text" class="form__field" placeholder="Login" data="login">
					<span class="form__field__popup-login"></span>
					<input type="password" class="form__field" placeholder="Password" data="pass">
					<span class="form__field__popup-pass"></span>
					<input type="file" class="form__field">
				</form>
				<div ref="saveProfile"></div>
			{{else}}
				<div class="profile__user">
					<img src="{{{avatar}}}" alt="avatar" class="profile__avatar">
					<span class="profile__name">{{nickname}}</span>
				</div>
				<div class="profile__info">
					<ul>
						<li>
							<p><strong>E-Mail:</strong>&nbsp;{{email}}</p>
						</li>
						<li>
							<p><strong>Wins:</strong>&nbsp;{{wins}}</p>
						</li>
						<li>
							<p><strong>Loses:</strong>&nbsp;{{loses}}</p>
						</li>
					</ul>
				</div>
				<div ref="changeProfile"></div>
			{{/if}}
		{{else}}
			<strong>You are not authorized</strong>
		{{/if}}
	{{/if}}
</div>
