<div>
	<form class="form">
		<input type="text" class="form__field" placeholder="Login" data="login">
		<span class="form__field__popup-login"></span>
		<input type="password" class="form__field" placeholder="Password" data="pass">
		<span class="form__field__popup-pass"></span>
		<div ref="submit"></div>
		<p class="form__link" ref="toSignUp"></p>

		<div id="modal" class="form__modal">
			<div class="form__modal-content">
				<div class="form__modal-content__header">
					<span id="close" class="form__modal-content__header__close">&times;</span>
					<h2>Ошибка!</h2>
				</div>
				<div class="form__modal-content__body">
					<p data="modal-info"></p>
				</div>
			</div>
		</div>
	</form>
</div>
